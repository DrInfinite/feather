{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "all": true,
            "complexity": {
                "noBannedTypes": "warn",
                "noForEach": "off"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 80
    },
    "javascript": {
        "formatter": {
            "semicolons": "always",
            "arrowParentheses": "always",
            "enabled": true,
            "bracketSameLine": true
        }
    }
}
