{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "all": true
        }
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 80
    },
    "javascript": {
        "formatter": {
            "semicolons": "always",
            "arrowParentheses": "always",
            "trailingComma": "all",
            "quoteStyle": "single",
            "quoteProperties": "asNeeded",
            "enabled": true,
            "bracketSpacing": true,
            "bracketSameLine": true
        }
    }
}
